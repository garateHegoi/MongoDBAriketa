<hibernate-mapping>
    <class name="model.Book" table="books">
        <id name="num" type="int">
            <column name="num" />
            <generator class="assigned" />
        </id>
        <property name="author" type="string">
            <column name="author" length="40" />
        </property>
        <property name="country" type="string">
            <column name="country" length="40" />
        </property>
        <property name="imageLink" type="string">
            <column name="imageLink" length="40" />
        </property>
        <property name="language" type="string">
            <column name="language" length="40" />
        </property>
        <property name="link" type="string">
            <column name="link" length="40" />
        </property>
        <property name="pages" type="int">
            <column name="pages" length="40" />
        </property>
        <property name="title" type="string">
            <column name="title" length="40" />
        </property>
        <property name="year" type="int">
            <column name="year" length="40" />
        </property>
    </class>
</hibernate-mapping>